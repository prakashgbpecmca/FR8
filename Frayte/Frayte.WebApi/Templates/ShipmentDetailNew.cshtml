    <div class="container">
        <div style="margin-top:30px;">
            <div class="mainHeading1">
                <div class="subHeadLeft" style="width:100%; text-align:center;">Booking Confirmation -  @Model.ShipmentDetail.DeliveredBy.CourierType</div>

                <div class="clearfix"></div>
            </div>

            <div class="floatRight shipmentNoBlock">

                <span class="shipmentInfo">FRAYTE  SHIPMENTID</span>
				@if(@Model.ShipmentDetail !=null){
				<span class="shipmentNo">@Model.ShipmentDetail.ShipmentId</span>
				}
                <div class="clearfix"></div>
            </div>
            <div class="clearfix"></div>
            @*<div class="floatRight deliveryDateBlock">
                    <span class="deliveryInfo">DATE</span>

                    <span class="deliveryDate">12-MAY-2016</span>
                    <div class="clearfix"></div>
                </div>*@
            <div class="clearfix"></div>


            <div class="clearfix"></div>


            <div class="marginTop3">
                <div class="floatLeft width49 border1">
                    <div class="fillFullPart" style="padding: 20px;line-height: 1px;">SHIP FROM</div>
                    <div class="padding2">
                        <div class="upperCase">
                            @if (@Model.ShipmentDetail.Shipper != null)
                            {
                                <div>@Model.ShipmentDetail.Shipper.ContactName<br /></div>
                                <div> @Model.ShipmentDetail.Shipper.CompanyName<br /></div>
                                if (@Model.ShipmentDetail.ShipperAddress != null)
                                {
                                    <div>@Model.ShipmentDetail.ShipperAddress.Address <br /></div>
                                    if (!String.IsNullOrEmpty(@Model.ShipmentDetail.ShipperAddress.Address2))
                                    {
                                        <div>@Model.ShipmentDetail.ShipperAddress.Address2 <br /></div>
                                    }
                                    if (!String.IsNullOrEmpty(@Model.ShipmentDetail.ShipperAddress.Address3))
                                    {
                                        <div>@Model.ShipmentDetail.ShipperAddress.Address3<br /></div>
                                    }
                                    <div>@Model.ShipmentDetail.ShipperAddress.City,@Model.ShipmentDetail.ShipperAddress.State<br /></div>
                                    <div>@Model.ShipmentDetail.ShipperAddress.Country.Name - @Model.ShipmentDetail.ShipperAddress.Zip<br /></div>
                                }

                            }
                        </div>
                        <div>
                            <div class="color">
                                <b>T : </b>span>@if (@Model.ShipmentDetail.Shipper != null)
                                { @Model.ShipmentDetail.Shipper.TelephoneNo}</span>
                            </div>
                            <div class="color">
                                <b>E : </b>@if (@Model.ShipmentDetail.Shipper != null)
                                { @Model.ShipmentDetail.Shipper.Email}
                            </div>

                        </div>
                    </div>

                </div>
                <div class="floatRight width49 border1">
                    <div class="fillFullPart" style="padding: 20px;line-height: 1px;">SHIP TO</div>
                    <div class="padding2">
                        <div class="upperCase">
                            @if (@Model.ShipmentDetail.Receiver != null)
                            {
                                <div>@Model.ShipmentDetail.Receiver.ContactName<br /></div>
                                <div>@Model.ShipmentDetail.Receiver.CompanyName <br /></div>
                                if (@Model.ShipmentDetail.ReceiverAddress != null)
                                {
                                    <div>@Model.ShipmentDetail.ReceiverAddress.Address <br /></div>
                                    if (!String.IsNullOrEmpty(@Model.ShipmentDetail.ReceiverAddress.Address2))
                                    {
                                        <div>@Model.ShipmentDetail.ReceiverAddress.Address2 <br /></div>
                                    }
                                    if (!String.IsNullOrEmpty(@Model.ShipmentDetail.ReceiverAddress.Address2))
                                    {
                                        <div>@Model.ShipmentDetail.ReceiverAddress.Address3<br /></div>
                                    }
                                    <div>@Model.ShipmentDetail.ReceiverAddress.City,@Model.ShipmentDetail.ReceiverAddress.State<br /></div>
                                    if (@Model.ShipmentDetail.ReceiverAddress.Country != null)
                                    {
                                        <div>
                                            <label>@Model.ShipmentDetail.ReceiverAddress.Country.Name - @Model.ShipmentDetail.ReceiverAddress.Zip</label><br />
                                        </div>
                                    }
                                }
                            }
                        </div>
                        <div class="color">
                            <b>T : </b><span>
                                @if (@Model.ShipmentDetail.Receiver != null)
                                { @Model.ShipmentDetail.Receiver.TelephoneNo}
                            </span>
                        </div>
                        <div class="color">
                            <b>E : </b><span>
                                @if (@Model.ShipmentDetail.Receiver != null)
                                { @Model.ShipmentDetail.Receiver.Email}
                            </span>
                        </div>

                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="marginTop3">
                <div class="fillFullPart" style="padding:20px; line-height:1px;">
                    SHIPMENT DETAIL
                </div>
                <div style="width: 100%; padding: 1%; border:1px solid black;">
                    <div style="width:100%;">
                        <div class="width50" style="float:left;">
                            <div class="width49" style="float:left;">
                                <div>SHIPMENT METHOD:</div>

                                <div>SHIPMENT TERM:</div>

                            </div>
                            <div class="width49" style="float:left;">
                                <div>
                                    @if (@Model.ShipmentDetail.DeliveredBy != null)
                                    {@Model.ShipmentDetail.DeliveredBy.Name}
                                </div>
                                <div>
                                    @if (@Model.ShipmentDetail.ShipmentTerm != null)
                                    {@Model.ShipmentDetail.ShipmentTerm.Detail}
                                </div>
                            </div>
                            <div class="clear:both;"></div>
                        </div>
                        <div class="width50" style="float:left;">
                            <div class="width49" style="float:left;">
                                <div>PACKAGING TYPE:</div>
                                @if (@Model.ShipmentDetail.SpecialDelivery != null && !String.IsNullOrEmpty(@Model.ShipmentDetail.SpecialDelivery.Detail))
                                {
                                    <div>SPECIAL DELIVERY NEEDED:</div>
                                }
                            </div>
                            <div class="width49" style="float:left;">
                                <div>
                                    @if (@Model.ShipmentDetail.PackagingType != null)
                                    {@Model.ShipmentDetail.PackagingType.Name}
                                </div>
                                <div>
                                    @if (@Model.ShipmentDetail.SpecialDelivery != null)
                                    {@Model.ShipmentDetail.SpecialDelivery.Detail}

                                </div>
                            </div>
                            <div class="clear:both;"></div>
                        </div>
                    </div>

                    <br /><br />

                    <hr />


                    <div style="width:100%;">
                        <div><h4>Schedule Pickup</h4></div>
                        <div class="width50" style="float:left;">
                            <div class="width49" style="float:left;">
                                <div>CONTACT NAME:</div>
                                <div>LOCATION TYPE:</div>
                                @if (@Model.ShipmentDetail.PickupDate != null)
                                {
                                    <div>PICK UP DATE & TIME:</div>
                                }
                                @if (@Model.ShipmentDetail.Timezone != null)
                                {
                                    <div>TIME ZONE:</div>
                                }
								 @if (@Model.ShipmentDetail.TransportToWarehouse != null){
<div>TRANSPORT TO WAREHOUSE:</div>								
								}
                                
                            </div>
                            <div class="width49" style="float:left;">
                                <div>
                                    @if (@Model.ShipmentDetail.ShipmentPickupContactName != null)
                                    {@Model.ShipmentDetail.ShipmentPickupContactName}
                                </div>
                                <div>
                                    @if (@Model.ShipmentDetail.LocationType != null)
                                    {@Model.ShipmentDetail.LocationType}
                                </div>
                                <div>
                                    @if (@Model.ShipmentDetail.PickupDate != null)
                                    {@Model.ShipmentDetail.PickupDate.ToString("dd/MM/yyyy")}
                                </div>
                                <div>
                                    @if (@Model.ShipmentDetail.Timezone != null)
                                    {@Model.ShipmentDetail.Timezone.OffsetShort}
                                </div>
                                <div>
                                    @if (@Model.ShipmentDetail.TransportToWarehouse != null)
                                    {@Model.ShipmentDetail.TransportToWarehouse.Name}

                                </div>
                            </div>
                            <div style="clear:both;"></div>
                        </div>
                        <div class="width50" style="float:left;">
                            <div class="width49" style="float:left;">
                                <div>SPECIAL INSTRUCTIONS:</div>
                                     @if (@Model.ShipmentDetail.Warehouse != null && @Model.ShipmentDetail.Warehouse.WarehouseName != null)
									 {
                                       <div>WAREHOUSE:</div>
                                     }  
                                <div></div>
                            </div>
                            <div class="width49" style="float:left;">
                                <div>
                                    @if (@Model.ShipmentDetail.SpecialInstruction != null)
                                    {@Model.ShipmentDetail.SpecialInstruction}
                                </div>
                                <div>
                                    @if (@Model.ShipmentDetail.Warehouse != null && @Model.ShipmentDetail.Warehouse.WarehouseName != null)
                                    {@Model.ShipmentDetail.Warehouse.WarehouseName}
                                </div>
                                <div></div>
                            </div>
                            <div style="clear:both;"></div>
                        </div>
                        <div style="clear:both;"></div>
                    </div>
                    <br />
                    <hr />
