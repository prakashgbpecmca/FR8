                    <section>
                        <div class="piecesDetailTable">
                            <div class="col-sm-12">
                                <h4 class="padding-tb-5">Piece Details:</h4>
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <div class="colHeader" style="width:8%">Job No</div>
                                        <div class="colHeader" style="width:13%">Style No.</div>
                                        <div class="colHeader" style="width:10%">HS Code</div>
                                        <div class="colHeader" style="width:12%">Carton Qty</div>
                                        <div class="colHeader" style="width:7%">Pieces</div>
                                        <div class="colHeader" style="width:14%">Weights Kgs</div>
                                        <div class="colHeader" style="width:7%">L cms</div>
                                        <div class="colHeader" style="width:8%">W cms</div>
                                        <div class="colHeader" style="width:7%">H cms</div>
                                        <div class="colHeader" style="width:14%">Pieces Content</div>
                                        <div class="clearfix"></div>
                                    </div>
                                    <div class="panel-body">
                                        @foreach (var item in Model.ShipmentDetail.ShipmentDetails)
                                        {
                                            <div ng-repeat="shippingDetail in shipmentDetail.ShipmentDetails">
                                                <div class="colHeader" style="width:8%"><div>@item.JobNumber</div></div>
                                                <div class="colHeader" style="width:13%"><div>@item.JobStyle</div></div>
                                                <div class="colHeader" style="width:10%"><div>@item.HSCode</div></div>
                                                <div class="colHeader" style="width:12%"><div>@item.CartonQty</div></div>
                                                <div class="colHeader" style="width:7%"><div>@item.Pieces</div></div>
                                                <div class="colHeader" style="width:14%"><div>@item.WeightKg</div></div>
                                                <div class="colHeader" style="width:7%"><div>@item.Lcms</div></div>
                                                <div class="colHeader" style="width:8%"><div>@item.Wcms</div></div>
                                                <div class="colHeader" style="width:7%"><div>@item.Hcms</div></div>
                                                <div class="colHeader" style="width:14%">@item.PiecesContent</div>
                                                <div class="clearfix"></div>
                                            </div>
                                        }
                                    </div>
                                    <div class="panel-footer">
                                        <div class="colFooter">
                                            <div>Total number of pieces : <span>@Model.TotalPieces</span></div>
                                        </div>
                                        <div class="colFooter">
                                            <div>Total weight : <span>@Model.TotalKgs</span> (Kgs)</div>
                                        </div>
                                        <div class="colFooter">
                                            <div>Total dim weight : <span>@Model.TotalWeight</span> (Kgs)</div>
                                        </div>
                                        <div class="clearfix"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>



                    <br />
                    <div style="width:100%">
                        <div><h4>Shipment Details</h4></div>
                        <div class="width50" style="float:left;">
                            <div class="width49" style="float:left;">
                                <div>DESCRIPTION OF CONTENTS:</div>
                            </div>
                            <div class="width49" style="float:left;">
                                <div>@Model.ShipmentDetail.ContentDescription</div>
                                <div></div>
                            </div>
                        </div>
                        <div class="width50" style="float:left;">
                            <div class="width49" style="float:left;">
                                <div>DUTIABLE OR NOT:</div>
                                <div>SHIPPING REFERENCE</div>
                                <div>SHIPPING DATE</div>
                            </div>
                            <div class="width49" style="float:left;">
                                <div>@Model.ShipmentDetail.ShipmentDuitable.Description</div>
                                <div class="part50">@Model.ShipmentDetail.PurchaseOrderNo</div>
                                <div class="part50">@Model.ShipmentDetail.ShippingDate.ToString("dd/MM/yyyy")</div>
                            </div>
                        </div>
                        <div style="clear:both;"></div>
                    </div>

                    <div style="width:100%">
                        <div class="width50" style="float:left;">
                            <h4>Payment Party</h4>
                            <div class="width49" style="float:left;">
                                <div>WHO IS GOING TO PAY THE FOR SHIPMENT:</div>
                                <div>@Model.ShipmentDetail.PaymentParty</div>
                            </div>
                            <div class="width49" style="float:left;">
                                <div></div>
                                <div></div>
                            </div>
                        </div>
                        <div class="width50" style="float:left;">
                            <h4>Customs Information</h4>
                            <div class="width49" style="float:left;">
                                <div>DECLARED VALUE</div>
                                <div>CURRENCY</div>
                            </div>
                            <div class="width49" style="float:left;">
                                <div>@Model.DeclaredValue</div>
                                @if (@Model.ShipmentDetail.DeclaredCurrency != null)
                                {
                                    @Model.ShipmentDetail.DeclaredCurrency.CurrencyCode
							    }
                            </div>
                        </div>
                    </div>
                    <div style="clear:both;"></div>
                </div>
            </div>
            <br />
            <div>
                <div class="fillFullPart border1" style="height:35px;padding:9px;">
                    Term & Conditions :
                </div>
                <br />
                <div>  
                    @(new RazorEngine.Text.RawString(@Model.TermAndConditionNew))               
                </div>
            </div>
            <br />
            <div class="fillFullPart text-center border1">
                END OF DOCUMENT
            </div>
        </div>
    </div>

    <div class="container" style="margin-top:30px;">
        <footer>
            <span class="footerText">p</span><span> +852 2148 4480</span>
